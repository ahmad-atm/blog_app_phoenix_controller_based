<div class="flex flex-col">
	<a class="bg-blue-600 p-3 rounded-lg flex items-center justify-center" href="/create_blog">New Blog</a>
	<div class="mt-5">
		<%= for blog <- @blogs do %>
			<.link href={"blog/#{blog.id}"} class="pt-7 border-b-2 border-gray-300 flex flex-col pl-5">
				<p class="text-gray-800 font-semibold"><%= blog.title %></p>  
			</.link>
		<% end %>		
	</div>
</div>
